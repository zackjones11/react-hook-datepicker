{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}